 /* === ভেরিয়েবলস এবং গ্লোবাল স্টাইল === */
 :root {
     --primary-color: #0056b3;
     --secondary-color: #f4f7f6;
     --text-color: #333;
     --heading-font: 'Segoe UI', 'Roboto', sans-serif;
     --body-font: 'Hind Siliguri', 'Segoe UI', sans-serif;
 }

 /* ... (বাকি সব কোড আগের মতোই থাকবে) ... */

 /* === Back to Top বাটনের ডিজাইন === */
 .back-to-top-button {
     display: none; /* ডিফল্টভাবে লুকানো থাকবে */
     position: fixed; /* স্ক্রিনের সাথে লেগে থাকবে */
     bottom: 20px;
     right: 20px;
     background-color: var(--primary-color);
     color: white;
     border: none;
     border-radius: 50%; /* বাটনটিকে গোল করে */
     width: 50px;
     height: 50px;
     font-size: 24px;
     text-align: center;
     line-height: 50px;
     cursor: pointer;
     z-index: 1000; /* অন্য সবকিছুর উপরে থাকবে */
     transition: background-color 0.3s ease, opacity 0.3s ease;
     text-decoration: none;
 }

